<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_banner" inherit_id="website.s_banner">
    <!-- Section -->
    <xpath expr="section" position="attributes">
        <attribute name="class" add="o_cc o_cc5" separator=" "/>
    </xpath>
    <!-- Title -->
    <xpath expr="//h1" position="replace" mode="inner">
        We Make It Happen!
    </xpath>

    <xpath expr="//img[@src='/web/image/website.s_banner_default_image_2']" position="attributes">
        <attribute name="src">/theme_purple/static/src/img/background/img1.jpg</attribute>
    </xpath>

    <xpath expr="//img[@src='/web/image/website.s_banner_default_image_3']" position="attributes">
        <attribute name="src">/theme_purple/static/src/img/background/img2.jpg</attribute>
    </xpath>

    <xpath expr="//img[@src='/web/image/website.s_banner_default_image']" position="attributes">
        <attribute name="src">/theme_purple/static/src/img/background/img3.jpg</attribute>
    </xpath>
</template>

</odoo>
